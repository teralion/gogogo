
.wrap
  max-height x(60)
  width 100%
  height 100%

  &.show
    .orderList
      opacity 1
      visibility visible
      transition opacity .3s ease-in, visibility .3s ease-in 0s

  &.disabled
    .orderButton
      cursor default
      opacity 0.5

    .orderList
      display none

.orderList
  position absolute
  visibility hidden
  opacity 0
  left unquote('calc(50%' + ' - ' + x(190) + ')')
  bottom unquote('calc(' + x(510) + ' - ' + x(60) + ')')
  max-width x(380)
  width 100%
  max-height x(510)
  height 100%
  background-color $white
  box-shadow 0 0 x(12) x(-1) $gray
  transition opacity .3s ease-out, visibility .3s ease-out .3s

.orderButton
  width 100%
  height 100%
  background-color $green
  color $white
  font-size x(30)
  text-align center
  opacity 1
  transition opacity .3s ease-in-out
