
.card
  display flex
  flex-flow column nowrap
  height x(423)
  width x(218)
  background-color $lightGray
  border-radius x(16)

.toAdd
  box-shadow 0 0 x(12) x(-1) $green

.image
  width 100%
  height x(195)
  cursor pointer
  border-top-right-radius x(16)
  border-top-left-radius x(16)

.content
  display flex
  flex-flow column nowrap
  height 100%
  padding x(16)
  padding-top x(10)

.amount
  flex-grow 1
  display flex
  flex-flow row

  .piece
    font-size x(16)
    margin-top x(7)

  .price
    font-size x(40)
    margin-left x(3)
    color $orange

.title
  margin-bottom x(3)
  font-size x(24)
  color $black
  cursor pointer

.counter
  height x(30)

  .input
    font-size x(20)

  .buttons
    font-size x(20)

.addToCartButton
  background-color $green
  max-height x(30)
  width 100%
  height 100%
  font-size x(24)
  color $white
  margin-top x(10)
  border-radius x(8)

  &.shouldUpdate
    box-shadow 0 0 x(12) x(-1) $green

/* service items */
.transition
  transition box-shadow .3s ease-in-out

.inc
  box-shadow 0 0 x(29) x(-1) $green

.dec
  box-shadow 0 0 x(29) x(-1) $red
